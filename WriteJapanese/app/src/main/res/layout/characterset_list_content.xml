<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/charset_delete"
        style="?android:borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:paddingRight="0dp"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/charset_edit"
        style="?android:borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:paddingRight="0dp"
        android:src="@drawable/ic_mode_edit"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/charset_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Character Set Name Could be really really long set lets test"
        android:layout_toLeftOf="@+id/charset_edit"
        android:layout_toStartOf="@+id/charset_edit"
        />
</RelativeLayout>