<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="500dp"
    tools:context="dmeeuwis.nakama.primary.CharacterSetStatusFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_gravity="center"
        android:layout_width="match_parent">

        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/charset_label"
            android:textSize="26sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/charset_desc"
            android:textSize="16sp"
            />

        <Space
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey"/>

        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <dmeeuwis.nakama.views.PieProgressView
                android:id="@+id/charset_progress_chart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/charset_progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGrey"/>

        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/charset_progress_set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Completion Goal"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Progress Notifications"
            android:enabled="false"
            />


        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
