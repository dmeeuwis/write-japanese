<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dmeeuwis.nakama.teaching.TeachingCombinedStoryInfoFragment">

    <LinearLayout
        android:id="@+id/combined_examples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="top|center_horizontal"
            >

            <EditText
                android:id="@+id/combined_story_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edit_story_hint"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center_horizontal"
            >

            <LinearLayout
                android:id="@+id/combined_stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center_horizontal"
            >

            <LinearLayout
                android:id="@+id/combinedRadicalsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/combined_radicals_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/radicals_label"
                    android:textColor="#878787"
                    android:textSize="18sp"/>

                <dmeeuwis.nakama.views.TallGridView
                    android:id="@+id/combinedRadicalsGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:gravity="center"
                    android:numColumns="3"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!-- examples get added here -->

    </LinearLayout>
</ScrollView>
