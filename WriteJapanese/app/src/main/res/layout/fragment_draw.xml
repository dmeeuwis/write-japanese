<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tracingFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10sp" >

    <TextView
        android:id="@+id/teachingLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/trace_message"
        android:textSize="24sp" />

    <dmeeuwis.nakama.views.TracingCurveView
        android:id="@+id/tracingPad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tipMessage"
        android:layout_below="@id/teachingLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@id/tipMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:minHeight="64sp"
        android:gravity="center"
        android:textSize="18sp" />

</RelativeLayout>