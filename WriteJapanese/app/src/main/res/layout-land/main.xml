<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e5e5e5">

    <dmeeuwis.nakama.primary.SafeViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">

        <!-- Drawing frame, where users test their might. -->

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <dmeeuwis.nakama.views.DrawView
                android:id="@+id/drawPad"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:gridPaddingLeft="240dp" />

            <dmeeuwis.nakama.views.translations.ClueCard
                android:id="@+id/clueCard"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:clickable="true"
                android:elevation="300dp"
                />

            <ImageView
                android:id="@+id/reviewBug"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/reviewing_content_description"
                android:elevation="@dimen/elevation_high"
                android:src="@drawable/review_bug"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Incorrect view screen -->
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <!-- Drawn -->
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="#FFA20D1B"
                        android:padding="6dp"
                        android:text="Drawn"
                        android:textColor="#FFFFFF" />

                    <dmeeuwis.nakama.views.AnimatedCurveView
                        android:id="@+id/animatedDrawnReplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="40dp" />
                </android.support.v7.widget.CardView>

                <!-- Correct -->

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="#FF1BA20D"
                        android:padding="6dp"
                        android:text="Correct"
                        android:textColor="#FFFFFF" />

                    <dmeeuwis.nakama.views.AnimatedCurveView
                        android:id="@+id/animatedKnownReplay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="40dp" />
                </android.support.v7.widget.CardView>

                <!-- Advice -->

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#449def"
                        android:padding="6dp"
                        android:text="Advice"
                        android:textColor="#FFFFFF" />

                    <ListView
                        android:id="@+id/criticism"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="40dp"
                        android:layout_weight="1" />
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <dmeeuwis.nakama.views.FloatingActionButton
                android:id="@+id/practiceButton"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="bottom|start"
                android:elevation="@dimen/elevation_low" />

            <dmeeuwis.nakama.views.FloatingActionButton
                android:id="@+id/nextButton"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="bottom|end"
                android:elevation="@dimen/elevation_low" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/correctLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- Left side: known and drawn characters -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF1BA20D"
                        android:padding="6dp"
                        android:text="Correct"
                        android:textColor="#FFFFFF" />

                    <dmeeuwis.nakama.views.AnimatedCurveView
                        android:id="@+id/correctKnownView"
                        android:layout_marginTop="40dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#FF1BA20D"
                        android:padding="6dp"
                        android:text="Drawn"
                        android:textColor="#FFFFFF" />

                    <dmeeuwis.nakama.views.AnimatedCurveView
                        android:id="@+id/correctDrawnView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="40dp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/correctExamples"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:divider="@android:color/transparent"
                    android:paddingBottom="85dp"
                    android:clipToPadding="false"
                    android:dividerHeight="10.0sp" />

                <dmeeuwis.nakama.views.FloatingActionButton
                    android:id="@id/correctNextButton"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="bottom|end"
                    android:elevation="@dimen/elevation_low" />
            </FrameLayout>
        </LinearLayout>
    </dmeeuwis.nakama.primary.SafeViewFlipper>

    <View
        android:id="@+id/maskView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</FrameLayout>